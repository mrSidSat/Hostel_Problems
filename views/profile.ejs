<body>
    <%- include("partials/header.ejs") %>

    <div class="body profile">
        <div class=container>
            <div class="row">
                <div class="col-12 col-sm-12">
                <h3>User Profile</h3>
                <hr>
                </div>
            </div>
            <div class="row row-content">
                <!-- <div class="col-xs-6 col-sm-6 col-md-6">
                    <img class="img-fluid profile-img" src="../public/assets/pic1.jpg"></img>
                </div> -->
                <div class="col-xs col-sm col-md">
                    <div class="card shadow-lg">
                        <h3 class="card-header text-white">Your Details</h3>
                        <div class="card_body">
                                <dl class="row">
                                <dt class="col-md-6">Email:</dt>
                                    <dd class="col-md-6"><%=datas.email%></dd>                                
                                <dt class="col-md-6">Name:</dt>
                                    <dd class="col-md-6"><%=datas.name%></dd>
                                <dt class="col-md-6">Hostel Name:</dt>
                                    <dd class="col-md-6"><%=datas.HostelName%></dd>
                                <dt class="col-md-6">Room No.:</dt>
                                    <dd class="col-md-6"><%=datas.RoomNo%></dd>
                                <dt class="col-md-6">No. of complains pending</dt>
                                    <dd class="col-md-6"><%=datas.TotalComplain%></dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("partials/footer.ejs") %>

